<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="100dp"
  android:clickable="true"
  android:background="@drawable/bg_settings_item">

  <LinearLayout
    style="@style/ConstraintLayout.Center"
    android:id="@+id/center_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="MissingConstraints">
    <TextView
      android:id="@+id/content_label"
      android:layout_width="@dimen/task_entry_label_width"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textSize="13sp"
      android:layout_marginEnd="10dp"
      android:gravity="end"
      android:text="@string/task_content_label" />
    <TextView
      android:id="@+id/content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:textSize="12sp"
      android:lines="2"
      android:gravity="center_vertical"
      android:text="@string/task_content_test" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toTopOf="@id/center_row">
    <TextView
      android:id="@+id/id_label"
      android:layout_width="@dimen/task_entry_label_width"
      android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
      android:gravity="end"
      android:textSize="13sp"
      android:text="@string/task_id_label" />
    <TextView
      android:id="@+id/id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:text="@string/task_id_test"
      android:textIsSelectable="true" />

    <TextView
      android:id="@+id/dispatcher_label"
      android:layout_width="@dimen/task_entry_label_width"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginEnd="10dp"
      android:textSize="13sp"
      android:gravity="end"
      android:text="@string/task_dispatcher_label" />
    <TextView
      android:id="@+id/dispatcher"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:text="@string/task_dispatcher_test" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/center_row">
    <TextView
      android:id="@+id/create_time_label"
      android:layout_width="@dimen/task_entry_label_width"
      android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
      android:gravity="end"
      android:textSize="13sp"
      android:text="发布时间" />

    <TextView
      android:id="@+id/create_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:text="2024-04-12 16:10" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>