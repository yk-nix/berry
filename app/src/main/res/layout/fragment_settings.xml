<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.settings.SettingsFragment"
  tools:ignore="ContentDescription">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="@color/white">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/image"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_gravity="center"
          android:src="@drawable/pic_minami" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_marginTop="30dp"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="滨边美波"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www-id: xxxxxxx"
            android:textSize="16sp"
            app:drawableRightCompat="@drawable/ic_arrow_forward_16dp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_round_rectangle_radius_8dp"
            android:clickable="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingHorizontal="5dp"
            android:text="Status"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_add_16dp" />
        </LinearLayout>
      </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.vroad.app.libui.ui.SettingsItem
      android:id="@+id/item_1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      app:left_text="jkdfjdlsfjksdjflsjf"
      app:right_icon_type="custom" />

    <com.vroad.app.libui.ui.SettingsItem
      android:id="@+id/item_2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:left_text="collfjdksfjsj"
      app:right_icon_type="check_box" />

    <com.vroad.app.libui.ui.SettingsItem
      android:id="@+id/item_3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:left_text="lisajfdkjflsjfdsk"
      app:right_icon_type="switcher"
      app:underline="false" />

    <TextView
      android:id="@+id/logout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/settings_item_height"
      android:layout_marginTop="20dp"
      android:background="@drawable/bg_entry"
      android:clickable="true"
      android:gravity="center"
      android:text="@string/btn_text_logout"
      android:textSize="@dimen/settings_item_text_size" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>